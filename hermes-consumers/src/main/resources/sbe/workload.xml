<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   xmlns:xi="http://www.w3.org/2001/XInclude"
                   package="pl.allegro.tech.hermes.consumers.supervisor.workload.sbe.stubs"
                   id="2"
                   version="0"
                   semanticVersion="5.2"
                   description="Schema for consumers subscription assignments storage">
    <xi:include href="common.xml"/>
    <types>
        <enum name="SubscriptionLoadStatus" encodingType="uint8">
            <validValue name="NORMAL">0</validValue>
            <validValue name="OVERLOADED">1</validValue>
            <validValue name="UNDERLOADED">2</validValue>
        </enum>
        <composite name="Throughput">
            <type name="rateIn" primitiveType="double"/>
            <type name="rateOut" primitiveType="double"/>
        </composite>
    </types>
    <sbe:message name="Assignments" id="1" description="Subscriptions assigned to a consumer node">
        <group name="Subscriptions" id="1">
            <field name="Id" id="2" type="int64"/>
        </group>
    </sbe:message>
    <sbe:message name="WorkloadMetrics" id="2" description="Workload metrics of a consumer node">
        <field name="cpuUtilization" id="1" type="double"/>
        <group name="subscriptionLoads" id="2">
            <field name="id" id="3" type="int64"/>
            <field name="loadStatus" id="4" type="SubscriptionLoadStatus"/>
            <field name="throughput" id="5" type="Throughput"/>
        </group>
    </sbe:message>
</sbe:messageSchema>
